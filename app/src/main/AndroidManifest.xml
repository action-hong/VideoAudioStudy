<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kkopite.videoaudiostudy">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Main2Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".c1.C1Activity">
        </activity>
        <activity android:name=".c2.AudioActivity">
        </activity>
        <activity android:name=".video.VideoActivity">
        </activity>
        <activity android:name=".video.PreviewActivity">
        </activity>
        <activity android:name=".extractor.ExtractorActivity">
        </activity>
        <activity android:name=".openGL.OpenGLActivity"/>
        <activity android:name=".codec.CodecActivity">
        </activity>
    </application>

</manifest>